generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  spends Spend[]
  incomes Income[]
  dailySprends  Float?    
  dailyIncome   Float?    
  Balance       Float?  
  accounts       Account[]
  categories     Category[]
}

model Spend {
  id          String   @id @default(uuid())
  category    String
  date        DateTime @default(now())
  value       Float
  statusSpend String
  people      String
  description String?    
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model Income {
  id          String   @id @default(uuid())
  value       Float
  date        DateTime @default(now())
  category    String
  description String
  people      String
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id])
}

model Account {
  id        Int      @id @default(autoincrement())
  name      String
  type      String
  balance   Float    @default(0)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Category {
  id             Int        @id @default(autoincrement())
  name           String
  subcategories  Subcategory[]
  userId         Int
  user           User       @relation(fields: [userId], references: [id])
}

model Subcategory {
  id         Int      @id @default(autoincrement())
  name       String
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}



